<div id="profile"  class="view full-page-intro">
    <div class="mask rgba-black-strong d-flex justify-content-center">

      <div class="container-fluid myBooks">

          <!-- LIBRARY AND WISHLIST -->
          <div id="mylibrary" class="container">
            <div id="book">

              <!-- USER NAME AND EMAIL SECTION -->
              <div class="container text-center" style="margin: 60px 0px 60px 0px">
                <h1 class="font-bold white-text mb-2 text-center">User: {{foundUser.first}} {{foundUser.last}} </h1>
                 <a href="mailto:{{foundUser.username}}?Subject=Hello%20{{foundUser.first}}" class= white-text target="_top" data-toggle="tooltip" title="{{foundUser.username}} "><i class="fa fa-envelope-square fa-lg">   {{foundUser.username}} </i></a>
              </div>
              <!-- USER NAME AND EMAIL SECTION -->
              
                  <!-- MY LIBRARY -->
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="panel panel-default">
                        <!-- PANEL HEADING -->
                        <div class="panel-heading bg-main-color">
                          <h2 class="font-bold white-text mb-2">Library</h2>
                        </div>
                        <!-- PANEL HEADING -->

                        <!-- PANEL BODY -->
                        <div class="panel-body">
                              <!-- TABLE OF BOOKS -->
                              <table class="table table-striped table-hover font-bold white-text">
                                <!-- TABLE HEADING -->
                                <thead>
                                  <tr>
                                    <th class="th-title">Title</th>
                                    <th class="th-thumbnail">Image</th> <!--image with a link to Google book description -->
                                    <th class="th-publisher">Author</th>
                                    <th class="th-publisher">Publisher</th>
                                  </tr>
                                </thead>
                                <!-- TABLE HEADING -->

                                <!-- TABLE BODY-->
                                <tbody>

                                  {{#each librarybooks}}
                                    <tr>
                                      <td class="td-title">{{this.book_title}}</td>
                                      <td class="td-thumbnail"><a href={{this.book_link}}><img src={{this.book_thumbnail}}></a></td>
                                      <td class="td-publisher">{{this.book_author}}</td>
                                      <td class="td-publisher">{{this.book_publisher}}</td>
                                    </tr>
                                  {{/each}}

                                </tbody>
                                <!-- TABLE BODY-->
                              </table>
                              <!-- TABLE OF BOOKS -->

                        </div>
                        <!-- PANEL BODY -->
                      </div>
                    </div>
                  </div>
                  <!-- MY LIBRARY -->


                  <!-- MY WISHLIST -->
                  <div class="row">
                      <div class="col-lg-12">
                        <div class="panel panel-default">
                          <!-- PANEL HEADING -->
                          <div class="panel-heading bg-main-color">
                            <h2 class="font-bold white-text mb-2">Wishlist</h2>
                          </div>
                          <!-- PANEL HEADING -->

                          <!-- PANEL BODY -->
                          <div class="panel-body">
                                <!-- TABLE OF BOOKS -->
                                <table class="table table-striped table-hover font-bold white-text">
                                  <!-- TABLE HEADING -->
                                  <thead>
                                    <tr>
                                      <th class="th-title">Title</th>
                                      <th class="th-thumbnail">Image</th> <!--image with a link to Google book description -->
                                      <th class="th-publisher">Author</th>
                                      <th class="th-publisher">Publisher</th>
                                    </tr>
                                  </thead>
                                  <!-- TABLE HEADING -->

                                  <!-- TABLE BODY-->
                                  <tbody>

                                    {{#each wishlistbooks}}
                                      <tr>
                                        <td class="td-title">{{this.book_title}}</td>
                                        <td class="td-thumbnail"><a href={{this.book_link}}><img src={{this.book_thumbnail}}></a></td>
                                        <td class="td-publisher">{{this.book_author}}</td>
                                        <td class="td-publisher">{{this.book_publisher}}</td>
                                      </tr>
                                    {{/each}}

                                  </tbody>
                                  <!-- TABLE BODY-->
                                </table>
                                <!-- TABLE OF BOOKS -->

                          </div>
                          <!-- PANEL BODY -->
                        </div>
                      </div>
                  </div>
                    <!-- MY WISHLIST -->


            </div>
          </div>
          <!-- LIBRARY AND WISHLIST -->

      </div>
  </div>

</div>
