<div id="profile"  class="view full-page-intro">
    <div class="mask rgba-black-strong d-flex justify-content-center">

      <div class="container-fluid myBooks">


          <!-- SEARCH FORM -->
          <div class="container search_book">
            <div class="row">
              <div class="col-lg-12">
                <form action="/search" method="get">
                    <div class="form-group">

                      <!-- Grid row -->
                      <div class="form-row">
                            <div class="col">
                                <div class="md-form">
                                    <input type="text" name="title" class="change form-control" placeholder="Enter a book title that you want to add" required>
                                </div>
                            </div>
                      </div>

                      <!-- Grid row -->
                      <div class="form-row">
                          <button type="submit" class="btn btn-outline-white waves-effect waves-light">Search</button>
                      </div>

                    </div>
                </form>
              </div>
            </div>
          </div>
          <!-- SEARCH FORM -->


          <!-- LIBRARY AND WISHLIST -->
          <div id="mylibrary" class="container">
            <div id="book">

                  <!-- MY LIBRARY -->
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="panel panel-default">
                        <!-- PANEL HEADING -->
                        <div class="panel-heading bg-main-color">
                          <h2 class="font-bold white-text mb-2">My Library</h2>
                        </div>
                        <!-- PANEL HEADING -->

                        <!-- PANEL BODY -->
                        <div class="panel-body">
                              <!-- TABLE OF BOOKS -->
                              <table class="table table-striped table-hover font-bold white-text">
                                <!-- TABLE HEADING -->
                                <thead>
                                  <tr>
                                    <th class="th-title">Title</th>
                                    <th class="th-thumbnail">Image</th> <!--image with a link to Google book description -->
                                    <th class="th-publisher">Publisher</th>
                                    <th class="th-button">Remove this Book?</th>
                                  </tr>
                                </thead>
                                <!-- TABLE HEADING -->

                                <!-- TABLE BODY-->
                                <tbody>

                                  {{#each librarybooks}}
                                    <tr>
                                      <td class="td-title">{{this.book_title}}</td>
                                      <td class="td-thumbnail"><a href={{this.book_link}}><img src={{this.book_thumbnail}}></a></td>
                                      <td class="td-publisher>"{{this.book_publisher}}</td>
                                      <td class="td-button">
                                        <form action="/removeFromLibrary/{{this.id}}" method="post">
                                          <input type="submit" class="btn btn-outline-white waves-effect waves-light" value="Remove">
                                        </form>
                                      </td>
                                    </tr>
                                  {{/each}}

                                </tbody>
                                <!-- TABLE BODY-->
                              </table>
                              <!-- TABLE OF BOOKS -->

                        </div>
                        <!-- PANEL BODY -->
                      </div>
                    </div>
                  </div>
                  <!-- MY LIBRARY -->


                  <!-- MY WISHLIST -->
                  <div class="row">
                      <div class="col-lg-12">
                        <div class="panel panel-default">
                          <!-- PANEL HEADING -->
                          <div class="panel-heading bg-main-color">
                            <h2 class="font-bold white-text mb-2">My Wishlist</h2>
                          </div>
                          <!-- PANEL HEADING -->

                          <!-- PANEL BODY -->
                          <div class="panel-body">
                                <!-- TABLE OF BOOKS -->
                                <table class="table table-striped table-hover font-bold white-text">
                                  <!-- TABLE HEADING -->
                                  <thead>
                                    <tr>
                                      <th class="th-title">Title</th>
                                      <th class="th-thumbnail">Image</th> <!--image with a link to Google book description -->
                                      <th class="th-publisher">Publisher</th>
                                      <th class="th-button">Remove this Book?</th>
                                    </tr>
                                  </thead>
                                  <!-- TABLE HEADING -->

                                  <!-- TABLE BODY-->
                                  <tbody>

                                    {{#each wishlistbooks}}
                                      <tr>
                                        <td class="td-title">{{this.book_title}}</td>
                                        <td class="td-thumbnail"><a href={{this.book_link}}><img src={{this.book_thumbnail}}></a></td>
                                        <td class="td-publisher">{{this.book_publisher}}</td>
                                        <td class="td-button">
                                          <form action="/removeFromWishlist/{{this.id}}" method="post">
                                            <input type="submit" class="btn btn-outline-white waves-effect waves-light" value="Remove">
                                          </form>
                                        </td>
                                      </tr>
                                    {{/each}}

                                  </tbody>
                                  <!-- TABLE BODY-->
                                </table>
                                <!-- TABLE OF BOOKS -->

                          </div>
                          <!-- PANEL BODY -->
                        </div>
                      </div>
                  </div>
                    <!-- MY WISHLIST -->


            </div>
          </div>
          <!-- LIBRARY AND WISHLIST -->

    </div>

  </div>
</div>
